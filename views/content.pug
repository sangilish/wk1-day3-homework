html
  head
    title Food Blog
    meta(charset="UTF-8")
    meta(name="viewport", content="width=device-width, initial-scale=1.0")
    script(src="https://cdn.jsdelivr.net/npm/vue@2.6.14/dist/vue.js")
    link(rel="stylesheet" href="css/styles.css")  
  body
    header
      headcomp
    main
      aside#leftside
      aside#rightside
        div#container
          section#photos
            img(src="images/chili.jpg" alt="White Chicken Chili" width="180")
          h2
            blogtitle
          section#blogposts
            ul
              li#posts(v-for="post in posts")
                span.profile
                  img(:src="post.profilepic" @click="authorinfo(posts, post)")
                span.author {{ post.name }} —
                span.date {{ post.date }} —
                span.reply {{ post.reply }}
                p {{ post.message }}
            div#info_box(v-for="post in posts" v-if="post.thisBox")
              p.closeBtn.closeBtnP(@click="post.thisBox = false") &#10006;
              div#info_title {{ post.name }}
              div#info_foodie
                span Foodie Level: 
                {{ post.foodielevel }}
              div#info_bio
                span Bio: 
                br 
                {{ post.bio }}
              button.closeBtn.closeBtnB(@click="post.thisBox = false") Close
    footer
      | &copy; Copyright FOOD BLOG
    script(src="js/vue.js")
